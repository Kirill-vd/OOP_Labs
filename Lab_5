import re

sentence_counter = 1
word_counter = 1
char_counter = 1

class texts:
    text = ''
    def __init__(self, text):
        self.sentences = list()
        split_regex = re.compile(r'[.|!|?|â€¦|\v]|\n')
        sentences = filter(lambda t: t, [t.strip() for t in split_regex.split(text)])
        for s in sentences:
            self.sentences.append(s)
            lines(self.sentences[-1])

class lines:
    def __init__(self, sentences):
        global sentence_counter
        self.words = list()
        split_regex = re.compile(r'[' '| : | ( | )| , |-]')
        words = sorted(filter(lambda t: t, [t.strip() for t in split_regex.split(sentences)]))
        for s in words:
            self.words.append(s)
            Words(self.words[-1])
        print(self.words)
        sentence_counter += 1

class Words:
    sorted_words = list()
    def __init__(self, words):
        global sentence_counter, word_counter
        self.chars = list()
        for q in words:
            texts.text = texts.text + q
            self.chars.append(q)
            letters(self.chars[-1])
        print(self.chars)
        word_counter += 1

class letters:
    def __init__(self, chars):
        global sentence_counter, word_counter, char_counter
        self.chars2 = list()
        for z in chars:
            self.chars2.append(z)
        print(self.chars2)
        char_counter += 1

enter_text = texts(input('Please, enter the text: '))

